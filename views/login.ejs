<%- include('partials/header') -%>


  <div class="flex justify-center h-[calc(100vh-150px)]">
    <section class="flex flex-col mt-10">
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="font-['lato']"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="font-['lato']"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST" autocomplete="off">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="font-['caveat'] text-4xl"
            >email</label
          ><br>
          <input
            type="email"
            class="border-[1px] font-['lato'] text-l py-2 px-2 w-[300px] text-left focus:outline-none rounded-md focus:border-yellow focus:ring-1 focus:ring-yellow"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
            autocomplete="off"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="font-['caveat'] text-4xl">password</label>
          <br>
          <input
            type="password"
            class="border-[1px] font-['lato'] text-lg py-2 px-2 w-[300px] text-left focus:outline-none rounded-md focus:border-yellow focus:ring-1 focus:ring-yellow"
            id="exampleInputPassword1"
            name="password"
            autocomplete="off"
          />
        </div>
        <button type="submit" class="font-['caveat'] text-3xl bg-yellow mt-4 py-2 px-10 rounded-md">submit</button>
      </form>
    </section>
  </div>
