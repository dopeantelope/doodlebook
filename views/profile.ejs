<%- include('partials/header-logged') -%>
<div class="mx-6 lg:mx-8 mb-20">
  <div class="flex flex-col items-center lg:justify-center">
    <h2 class="font-['caveat'] text-6xl mb-5">doodles</h2>
    <% if (posts.length < 1) {%>
      <div class="flex flex-col items-center lg:flex-row">
        <img class="w-[500px] lg:mr-4" src="/images/light.png">
        <p class="lg:ml-4 mt-10 inline-block font-['merriweather'] lg:mt-4 mb-8 text-sm leading-6 tracking-wider">You haven't posted anything yet :(</p>
      </div>
    <% } %>
      <div class="flex flex-col items-center">
        <ul class="grid grid-cols-1 gap-2 md:grid-cols-2 lg:grid-cols-3 lg:gap-4 mt-5">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
      </div>  
    </div>
  </div>
</div>
