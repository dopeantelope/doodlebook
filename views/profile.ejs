<%- include('partials/header-logged') -%>
<div class="m-12 flex lg:justify-center">
  <div class="flex flex-col lg:flex-row items-center lg:justify-center mt-5 w-screen">
    <% if (posts.length < 1) {%>
      <img class="w-[500px] lg:mr-4" src="/images/light.png">
      <p class="lg:ml-4 mt-10 inline-block font-['merriweather'] lg:mt-4 mb-8 text-sm leading-6 tracking-wider">You haven't posted anything yet :(</p>
    <% } %>
      <div class="flex justify-center text-center mt-5">
        <ul class="grid grid-cols-3 gap-4">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
      </div>  
    </div>
  </div>
</div>
